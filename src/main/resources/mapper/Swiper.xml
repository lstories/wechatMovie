<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wechatmovie.mapper.SwiperMapper">
    <!--  新增用户  -->
    <insert id="add">
        insert into swiper(id, filmName, photo)
        value (#{id}, #{filmName}, #{photo})
    </insert>
    <!--  查询用户列表  -->
    <select id="list" resultType="com.wechatmovie.entity.Swiper">
        select * from swiper order by id desc
    </select>
    <!--  用户模糊查询  -->
    <select id="listByCondition" resultType="com.wechatmovie.entity.Swiper">
        select * from swiper
            <where>
                <if test="filmName != null and filmName != ''">
                    filmName like concat('%', #{filmName}, '%')
                </if>
            </where>
        order by id desc
    </select>
    <!--  通过userId来查询  -->
    <select id="getById" resultType="com.wechatmovie.entity.Swiper">
        select * from swiper where id = #{id}
    </select>
    <!--  通过id将修改后的数据, 更新到数据库  -->
    <update id="updateById">
        update swiper set filmName = #{filmName}, photo = #{photo}
        where id = #{id}
    </update>
    <!--   通过Id删除用户  -->
    <delete id="deleteFilmById">
        delete from swiper where id = #{id}
    </delete>


</mapper>




























